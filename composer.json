{
  "name": "ccu-plus/api-service",
  "description": "CCU PLUS API Service.",
  "keywords": ["ccu-plus"],
  "license": "AGPL",
  "type": "project",
  "require": {
    "php": "^7.2",
    "ext-json": "*",
    "algolia/algoliasearch-client-php": "2.4.*",
    "bepsvpt/secure-headers": "5.5.*",
    "ccu-plus/authentication": "master",
    "ccu-plus/course-import": "master",
    "ccu-plus/eloquent-orm": "master",
    "doctrine/dbal": "2.9.*",
    "gregwar/captcha": "1.1.*",
    "guzzlehttp/guzzle": "6.3.*",
    "illuminate/redis": "6.3.*",
    "laravel/lumen-framework": "6.2.*",
    "laravel/scout": "7.2.*",
    "laravel/tinker": "1.0.*",
    "predis/predis": "1.1.*",
    "spatie/laravel-fractal": "5.6.*",
    "vlucas/phpdotenv": "3.6.*",
    "thepixeldeveloper/sitemap": "5.1.*"
  },
  "require-dev": {
    "barryvdh/laravel-cors": "0.11.*",
    "fzaninotto/faker": "1.8.*",
    "phpunit/phpunit": "8.4.*",
    "mockery/mockery": "1.2.*"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/ccu-plus/authentication.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ccu-plus/course-import.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ccu-plus/eloquent-orm"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/",
      "database/"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
